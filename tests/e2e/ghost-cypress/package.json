{
    "name": "ghost-cypress",
    "version": "1.0.0",
    "description": "Pruebas E2E a la plataforma GHOST con el framework Cypress.",
    "scripts": {
        "cypress:open": "cypress open --e2e --browser chrome --reporter mochawesome",
        "cypress:run": "cypress run --e2e --browser chrome --headless --reporter mochawesome",
        "test": "npm run cypress:run --",
        "format": "prettier --write cypress"
    },
    "keywords": [
        "Cypress",
        "E2E",
        "testing",
        "Ghost"
    ],
    "author": "Juan Manuel González Garzón",
    "license": "MIT",
    "devDependencies": {
        "@cypress/chrome-recorder": "^2.3.1",
        "@faker-js/faker": "^7.6.0",
        "cypress": "^12.12.0",
        "mochawesome": "^7.1.3"
    },
    "dependencies": {
        "faker": "^5.5.3"
    }
}
